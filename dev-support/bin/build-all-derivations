#!/usr/bin/env bash

set -euo pipefail
IFS=$'\n\t'

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"

# shellcheck source=/dev-support/lib/logging
. "${SCRIPT_DIR}"/../lib/logging

drvs=(
	zsh
	tmux

	htop

	aria2
	axel
	wget

	nmap
	mtr
	iperf

	i3
	picom

	librime
	fcitx5-rime

	slock
	polybar

	axdot
	eriksync
	clipcat
	valo
	gdv-dl
	xenon

	ssh-tools

	desktop-wallpapers.fedora-28.zen

	sddm-themes.abstractdark

	fcitx5-themes.material-color
	fcitx5-themes.nord
	fcitx5-themes.thep0y

	cns11643-fonts
	cwtex-q-fonts
	ionicons
	wqy-microhei

	firefox-hidpi
)

for drv in ${drvs[@]}; do
	info "Building derivation ${drv}"

	nix build --json -L --no-link ".#${drv}" | jq
done
